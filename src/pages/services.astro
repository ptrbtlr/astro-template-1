---
import Layout from "../layouts/Layout.astro";
import { site } from "../data/site.config";
---

<Layout>
  <section class="mx-auto max-w-6xl px-4 py-14">
    <div class="max-w-2xl">
      <p class="text-sm font-semibold text-gray-600">
        {site.business.name} • {site.business.address}
      </p>
      <h1 class="mt-3 text-4xl font-extrabold tracking-tight md:text-5xl">
        Cleaning services
      </h1>
      <p class="mt-4 text-lg text-gray-600">
        Simple, reliable options — choose what fits your home and schedule.
      </p>

      <div class="mt-6 flex flex-wrap gap-3">
        <a
          class="rounded-lg bg-gray-900 px-5 py-3 font-semibold text-white"
          href={site.cta.primaryHref}
        >
          {site.cta.primaryText}
        </a>
        <a class="rounded-lg border px-5 py-3 font-semibold" href={site.cta.secondaryHref}>
          {site.cta.secondaryText}
        </a>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-4 pb-16">
    <div class="grid gap-6 md:grid-cols-3">
      {site.services.map((s) => (
        <article class="rounded-2xl border p-6">
          <h2 class="text-xl font-semibold">{s.title}</h2>
          <p class="mt-2 text-sm text-gray-600">{s.desc}</p>

          <div class="mt-6 rounded-xl bg-gray-50 p-4">
            <p class="text-sm font-semibold text-gray-700">What’s included</p>
            <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-gray-600">
              <li>Kitchens & bathrooms</li>
              <li>Floors & surfaces</li>
              <li>Bedrooms & living spaces</li>
            </ul>
          </div>

          <div class="mt-6 flex items-center justify-between">
            <a class="text-sm font-semibold underline underline-offset-4" href={site.cta.primaryHref}>
              Request a quote →
            </a>
            <span class="text-xs text-gray-500">Flexible scheduling</span>
          </div>
        </article>
      ))}
    </div>
  </section>

  <section class="bg-gray-50">
    <div class="mx-auto max-w-6xl px-4 py-16">
      <div class="grid gap-10 md:grid-cols-2 md:items-start">
        <div>
          <h2 class="text-3xl font-bold tracking-tight">Service areas</h2>
          <p class="mt-3 text-gray-600">
