---
import { site } from "../data/site.config";
---

<section id="services" class="mx-auto max-w-6xl px-4 py-16">
  <div class="flex flex-col gap-3 md:flex-row md:items-end md:justify-between">
    <div>
      <h2 class="text-3xl font-bold tracking-tight">Services</h2>
      <p class="mt-2 text-gray-600">
        Choose the clean that fits your space and schedule.
      </p>
    </div>

    <a
      class="rounded-lg border px-4 py-2 text-sm font-semibold hover:bg-gray-50"
      href={site.cta.primaryHref}
    >
      {site.cta.primaryText}
    </a>
  </div>

  <div class="mt-10 grid gap-6 md:grid-cols-3">
    {site.services.map((s) => (
      <div class="rounded-2xl border p-6">
        <h3 class="text-lg font-semibold">{s.title}</h3>
        <p class="mt-2 text-sm text-gray-600">{s.desc}</p>

        <div class="mt-5">
          <a class="text-sm font-semibold underline underline-offset-4" href={site.cta.primaryHref}>
            Get pricing â†’
          </a>
        </div>
      </div>
    ))}
  </div>
</section>
