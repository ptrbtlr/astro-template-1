---
import { site } from "../data/site.config";
---

<section class="bg-gray-900">
  <div class="mx-auto max-w-6xl px-4 py-16">
    <div class="grid gap-8 md:grid-cols-2 md:items-center">
      <div>
        <h2 class="text-3xl font-bold tracking-tight text-white">
          Ready for a spotless home?
        </h2>
        <p class="mt-3 text-gray-300">
          Tell us the size of your space and what you need cleaned — we’ll reply with a quick quote.
        </p>
      </div>

      <div class="flex flex-col gap-3 sm:flex-row sm:justify-end">
        <a class="rounded-lg bg-white px-6 py-3 font-semibold text-gray-900" href={site.cta.primaryHref}>
          {site.cta.primaryText}
        </a>
        <a class="rounded-lg border border-white/30 px-6 py-3 font-semibold text-white" href={site.cta.secondaryHref}>
          {site.cta.secondaryText}
        </a>
      </div>
    </div>
  </div>
</section>
