---
import { site } from "../data/site.config";
---

<section id="areas" class="bg-gray-50">
  <div class="mx-auto max-w-6xl px-4 py-16">
    <div class="grid gap-10 md:grid-cols-2 md:items-center">
      <div>
        <h2 class="text-3xl font-bold tracking-tight">Serving Austin & nearby</h2>
        <p class="mt-3 text-gray-600">
          We cover most of Austin and surrounding neighborhoods. Not sure if youâ€™re in range? Ask anyway.
        </p>

        <div class="mt-6 flex flex-wrap gap-3">
          <a class="rounded-lg bg-gray-900 px-5 py-3 font-semibold text-white" href={site.cta.primaryHref}>
            {site.cta.primaryText}
          </a>
          <a class="rounded-lg border px-5 py-3 font-semibold" href={site.cta.secondaryHref}>
            {site.cta.secondaryText}
          </a>
        </div>
      </div>

      <div class="rounded-2xl border bg-white p-6">
        <p class="text-sm font-semibold text-gray-600">Common service areas</p>
        <div class="mt-4 grid grid-cols-2 gap-3">
          {site.serviceAreas.map((a) => (
            <div class="rounded-lg border px-3 py-2 text-sm">{a}</div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
