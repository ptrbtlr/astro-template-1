---
import { site } from "../data/site.config";
---

<section id="quote" class="mx-auto max-w-6xl px-4 py-16">
  <div class="grid gap-10 md:grid-cols-2 md:items-start">
    <!-- Left column: info -->
    <div>
      <h2 class="text-3xl font-bold tracking-tight">Get a free quote</h2>
      <p class="mt-3 text-gray-600">
        Share a few details and we’ll get back to you quickly.
      </p>

      <div class="mt-6 space-y-3 text-sm">
        <p class="text-gray-700">
          <span class="font-semibold">Phone:</span>{" "}
          <a class="underline underline-offset-4" href={site.cta.secondaryHref}>
            {site.business.phone}
          </a>
        </p>

        <p class="text-gray-700">
          <span class="font-semibold">Email:</span>{" "}
          <a class="underline underline-offset-4" href={`mailto:${site.business.email}`}>
            {site.business.email}
          </a>
        </p>

        <p class="text-gray-700">
          <span class="font-semibold">Location:</span> {site.business.address}
        </p>
      </div>

      <div class="mt-8 rounded-2xl border bg-gray-50 p-5">
        <p class="text-sm font-semibold text-gray-700">What to include</p>
        <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-gray-600">
          <li>Home size (beds/baths)</li>
          <li>Type of service (standard, deep, move-out)</li>
          <li>Any focus areas (kitchen, bathrooms, pet hair)</li>
          <li>Preferred dates/times</li>
        </ul>
      </div>
    </div>

    <!-- Right column: Netlify form -->
    <div class="rounded-2xl border p-6 md:p-8">
      <form
        class="grid gap-4"
        name="quote"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        action="/success/"
      >
        <!-- required for Netlify -->
        <input type="hidden" name="form-name" value="quote" />

        <!-- honeypot (spam trap) -->
        <p class="hidden">
          <label>
            Don’t fill this out if you’re human: <input name="bot-field" />
          </label>
        </p>

        <div class="grid gap-4 md:grid-cols-2">
          <label class="grid gap-1">
            <span class="text-sm font-semibold">Name</span>
            <input
              class="rounded-lg border px-4 py-3"
              name="name"
              placeholder="Jane Doe"
              required
              autocomplete="name"
            />
          </label>

          <label class="grid gap-1">
            <span class="text-sm font-semibold">Phone</span>
            <input
              class="rounded-lg border px-4 py-3"
              name="phone"
              placeholder="(512) 555-0123"
              required
              autocomplete="tel"
            />
          </label>
        </div>

        <label class="grid gap-1">
          <span class="text-sm font-semibold">Email</span>
          <input
            class="rounded-lg border px-4 py-3"
            type="email"
            name="email"
            placeholder="jane@email.com"
            autocomplete="email"
          />
        </label>

        <label class="grid gap-1">
          <span class="text-sm font-semibold">Address / Neighborhood</span>
          <input
            class="rounded-lg border px-4 py-3"
            name="address"
            placeholder="South Lamar, Austin"
            autocomplete="street-address"
          />
        </label>

        <div class="grid gap-4 md:grid-cols-2">
          <label class="grid gap-1">
            <span class="text-sm font-semibold">Service</span>
            <select class="rounded-lg border px-4 py-3" name="service">
              {site.services.map((s) => (
                <option value={s.title}>{s.title}</option>
              ))}
            </select>
          </label>

          <label class="grid gap-1">
            <span class="text-sm font-semibold">Frequency</span>
            <select class="rounded-lg border px-4 py-3" name="frequency">
              <option value="One-time">One-time</option>
              <option value="Weekly">Weekly</option>
              <option value="Bi-weekly">Bi-weekly</option>
              <option value="Monthly">Monthly</option>
            </select>
          </label>
        </div>

        <label class="grid gap-1">
          <span class="text-sm font-semibold">Details</span>
          <textarea
            class="rounded-lg border px-4 py-3"
            name="details"
            rows="5"
            placeholder="Beds/baths, focus areas, pets, preferred dates…"
          />
        </label>

        <button class="rounded-lg bg-gray-900 px-5 py-3 font-semibold text-white hover:bg-gray-800">
          Request Quote
        </button>

        <p class="text-xs text-gray-500">
          By submitting, you agree to be contacted about your request.
        </p>
      </form>
    </div>
  </div>
</section>
